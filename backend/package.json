{
  "name": "@fennec/backend",
  "version": "1.0.0",
  "description": "Fennec backend management system API server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
